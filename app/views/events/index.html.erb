<h1>My Events</h1>

<%= link_to 'New Event', new_event_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Location</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.capacity %></td>
        <td><%= link_to 'Show', event %></td>
        <% if event.creator_id == current_user.id %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
